---
import Contact from "../../components/Contact.astro";
import Project from "../../components/Project.astro";
import Skills from "../../components/Skills.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

const data = {
  title: "Bassam Ahmad",
  pageType: "website",
  description: "Web developer",
  tags: [
    "web development",
    "programming",
    "Python",
    "Astro",
    "Nextjs",
    "Flask",
    "SQL",
    "PLC",
    "Industrial Automation",
    "Mechatronics",
    "Robotics",
    "Matlab",
  ],
  author: "Bassam Ahmad",
};
---

<BaseLayout data={data}>
  <h1 class="text-5xl text-teal-600 my-5">Bassam Ahmad</h1>
  <section>
    <h2 class="text-2xl my-2 px-3">Web developer.</h2>
    <p class="px-3">
      I'm looking forward to increase my experience and build perfect products.
    </p>
    <hr class="max-w-sm border-teal-600 mt-2 mb-5" />
  </section>
  <section>
    <h2 class="text-4xl text-teal-600">Projects</h2>
    <ul
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 p-3"
    >
    <Project
        name="Underwater Image Enhancement"
        github="md-net-underwater-image-enhancement"
        img={{
          url: "/md-net-underwater-image-enhancement.webp",
          alt: "Underwater image with its enhancement version",
        }}
      />
      <Project
        name="Heat shrink packaging machine"
        demo="https://docs.google.com/document/d/1jDxXjj-PbdqNyx0p_79KL1HUkZ_bMn-X/edit?usp=sharing&ouid=114402589686738479550&rtpof=true&sd=true"
        img={{
          url: "/heat-shrink-machine.webp",
          alt: "Machine Image",
        }}
      />
      <Project
        name="URL Shortener"
        github="url-shortener"
        demo="https://url-shortener-k237.onrender.com/"
        img={{
          url: "/url-shortener.webp",
          alt: "App Screenshot",
        }}
      />
      <Project
        name="Ecommerce Website"
        github="ecommerce"
        demo="https://ecommerce-idfw.onrender.com/"
        img={{
          url: "/ecommerce.webp",
          alt: "App Screenshot",
        }}
      />
      <Project
        name="CNN Using NumPy"
        github="cnn-from-zero"
        img={{
          url: "/cnn-from-zero.webp",
          alt: "Image for CNN Architecture",
        }}
      />
      <Project
        name="CoDoc AI"
        github="medai-api"
        demo="https://codoc.onrender.com/"
        img={{
          url: "/medai-api.webp",
          alt: "App Screenshot",
        }}
      />
    </ul>
    <a
      href="http://github/BassamXYZ"
      class="px-3 text-teal-600 hover:text-blue-600">For more: Github.</a
    >
    <hr class="max-w-sm border-teal-600 mt-2 mb-5" />
  </section>
  <section>
    <h2 class="text-4xl text-teal-600">Skills</h2>
    <Skills
      skills={[
        "Frontend",
        "Backend",
        "Python",
        "JavaScript",
        "PyTorch",
        "C++",
        "C",
        "React",
        "Astro",
        "Nextjs",
        "Tailwind",
        "Flask",
        "REST API",
        "GraphQL",
        "SQL",
        "Mongodb",
        "Git",
        "Problem solving",
      ]}
    />
    <hr class="max-w-sm border-teal-600 mt-2 mb-5" />
  </section>
  <section>
    <h2 class="text-4xl text-weight-800 text-teal-600">Contact</h2>
    <Contact />
  </section>
</BaseLayout>
